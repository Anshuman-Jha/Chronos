{
  "name": "server",
  "version": "1.0.0",
  "description": "Interview Preparation Platform Backend",
  "main": "dist/index.js",
  "scripts": {
    "build": "rm -rf dist && prisma generate --schema=src/prisma/schema.prisma && tsc",
    "generate": "prisma generate --schema=src/prisma/schema.prisma",
    "start": "node dist/index.js",
    "dev": "concurrently \"tsc -w\" \"nodemon --exec ts-node src/index.ts\"",
    "postinstall": "prisma generate --schema=src/prisma/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "^7.1.0",
    "@prisma/adapter-pg": "^7.1.0",
    "bcrypt": "^6.0.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.3",
    "morgan": "^1.10.0",
    "pg": "^8.16.3",
    "prisma": "^7.1.0",
    "typescript": "^5.5.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.4.0",
    "@types/pg": "^8.16.0",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.4",
    "ts-node": "^10.9.2"
  }
}